cat > .gitignore <<'EOF'
# ================================
# Node / package manager
# ================================
node_modules/
package-lock.json
yarn.lock
.pnpm-lock.yaml
.pnpm-debug.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# ================================
# Environment & secrets
# ================================
.env
.env.*.local
.env.local

# ================================
# Build / output
# ================================
dist/
build/
out/
.tmp/
.temp/

# ================================
# Logs
# ================================
logs/
*.log
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*

# ================================
# OS files
# ================================
.DS_Store
Thumbs.db

# ================================
# Editor / IDE
# ================================
.vscode/
.idea/
*.sublime-workspace
*.sublime-project
*.swp
*~.nib

# ================================
# Test / coverage
# ================================
coverage/
.nyc_output/
jest-cache/
test-results.xml

# ================================
# Docker
# ================================
docker-compose.override.yml
docker-compose.*.yml

# ================================
# Misc / sensitive
# ================================
*.seed
*.pid
*.pid.lock
EOF
